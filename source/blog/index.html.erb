---
title: Blog
---

<h2>Blog</h2>

<hr>

<% blog.articles.each_with_index do |article, i| %>
  <article class="blog-post-summary">
    <h3><%= link_to article.title, article %> &ndash; <time><%= article.date.strftime('%b %d, %Y') %></time></h3>
    <% if article.data.author %>
      <h5 class="blog-post-summary-author">
        <span>posted by: <%= article.data.author %></span>
      </h5>
    <% end%>
    <div class="blog-tags">
    <% article.tags.each_with_index do |tag, i| %>
			<span class="label label-info"><%= tag %></span>
	<% end %>
	</div>
    <p class="blog-summary"><%= article.summary %></p>
    <%= link_to "Read more...", article %>
  </article>
  
<% end %>

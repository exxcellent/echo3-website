<% wrap_layout :layout do %>
  <% content_for :assets do %>
    <%= stylesheet_link_tag 'documentation' %>
  <% end %>

  <% content_for :sidebar do %>
	<div>
		<ul class="nav nav-pills nav-stacked">
		  <li class="sidebar-head"><a href="<%= url_for '/documentation.html' %>">Documentation</a></li>
		  <li class="sidebar-section"><a href="<%= url_for '/documentation/guides.html' %>">Developer's Guide</a></li>
		  <li class="sidebar-section"><a href="<%= url_for '/documentation/api.html' %>">API</a></li>
		  <li class="sidebar-section"><a href="<%= url_for '/documentation/articles.html' %>">Articles</a></li>
		</ul>
	</div>
  <% end %>

  <div class="title">
  <h2><%= current_page.data.title %></h2>

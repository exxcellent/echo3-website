<% wrap_layout :layout do %>
	<% content_for :assets do %>
	  <%= stylesheet_link_tag 'documentation' %>
	<% end %>

  <% content_for :sidebar do %>
	<div>
		<ul class="nav nav-pills nav-stacked">
		  <li class="sidebar-head"><a href="<%= url_for '/documentation' %>">Documentation</a></li>
		  <li class="sidebar-section"><a href="<%= url_for '/documentation/guides' %>">Developer's Guide</a></li>
		  <%= index_for(data.guides) %>
		  <li class="sidebar-section"><a href="<%= url_for '/documentation/api' %>">API</a></li>
		  <li class="sidebar-section"><a href="<%= url_for '/documentation/articles' %>">Articles</a></li>
		</ul>
	</div>
  <% end %>

  <div class="title">
  <h2><%= current_page.data.title %></h2>
  <a href="<%= guides_base_url() + current_page.path[0..current_page.path.rindex('.html')-1] + '.md'%>"><i alt="Edit document" title="Edit document" class="icon-pencil"></i></a>
  <hr>
  </div>
  <%= yield %>
<% end %>

<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><%= current_page.data.title || "Echo3 Web Framework" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'metro-bootstrap' %>
    <%= stylesheet_link_tag 'font-awesome' %>

    <%= javascript_include_tag 'jquery-1.8.0.js' %>
    <%= javascript_include_tag 'bootstrap-tooltip.js' %>
    <%= javascript_include_tag 'bootstrap-alert.js' %>
    <%= javascript_include_tag 'bootstrap-button.js' %>
    <%= javascript_include_tag 'bootstrap-carousel.js' %>
    <%= javascript_include_tag 'bootstrap-collapse.js' %>
    <%= javascript_include_tag 'bootstrap-dropdown.js' %>
    <%= javascript_include_tag 'bootstrap-modal.js' %>
    <%= javascript_include_tag 'bootstrap-popover.js' %>
    <%= javascript_include_tag 'bootstrap-scrollspy.js' %>
    <%= javascript_include_tag 'bootstrap-tab.js' %>
    <%= javascript_include_tag 'bootstrap-transition.js' %>
    <%= javascript_include_tag 'bootstrap-typeahead.js' %>
    <%= javascript_include_tag 'jquery.validate.js' %>
    <%= javascript_include_tag 'jquery.validate.unobtrusive.js' %>
    <%= javascript_include_tag 'jquery.unobtrusive-ajax.js' %>

    <%= yield_content :assets %>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body class="<%= page_classes %>" data-spy="scroll" data-target=".subnav" data-offset="50" screen_capture_injected="true">
    <div class="container">
		<div class="navbar">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
					</a><a class="brand" href="/">Echo3</a>
					<div class="nav-collapse collapse">
						<ul class="nav">
							<li class="<%= current_page.url == '/' ? 'active' : '' %>"><a href="/">About</a> </li>
							<li class="<%= current_page.url == '/demo/' ? 'active' : '' %>"><a href="/demo">Demo</a> </li>
							<li class="<%= current_page.url == '/guides/' ? 'active' : '' %>"><%= link_to 'Guides', '/guides' %> </li>
							<li class="<%= current_page.url == '/api/' ? 'active' : '' %>"><a href="/api">API</a> </li>
							<li class="<%= current_page.url == '/community/' ? 'active' : '' %>"><a href="/community">Community</a>
						</ul>
					</div>
					
					<form class="navbar-search pull-left">
					  <input type="text" class="search-query" placeholder="Search">
					</form>
				</div>
			</div>
		</div>

	   <div>
       <%= yield %>
	   </div>


        <footer class="footer">
			<hr/>
			&copy; 2013 xyz<br/>
      </footer>
    </div>
</body>
</html>

<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <link href="<%= url_for '/blog/feed.xml' %>" rel="alternate" type="application/atom+xml" title="Echo3 - Blog" />
    <link rel="icon" type="image/png" href="<%= url_for '/assets/img/logo-dark.png' %>">
    
    <title><%= current_page.data.title || "Echo3 Web Framework" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- CSS -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css'>   
    <%= stylesheet_link_tag 'bootstrap.min.css' %>
    <%= stylesheet_link_tag 'echo.css' %>
    <link href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag 'font-awesome-modern.css' %>

	<!-- Site-specific assets -->
    <%= yield_content :assets %>
    
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    
    <!-- Additional head content per site -->
    <%= yield_content :head %>
</head>
<body class="<%= page_classes %>" data-spy="scroll" data-target=".subnav" data-offset="50" screen_capture_injected="true">
	<div class="container">
		<!-- Navbar -->
		<div class="navbar">
		  <a style="margin: 0;" class="navbar-brand" href="<%= url_for 'index.html' %>"><img style="height: 40px" src="<%= url_for '/assets/img/logo-dark.png' %>"/></a>
		  <ul class="nav navbar-nav">
			<li class="nav-about"><a href="<%= url_for '/about.html' %>">about</a></li>
			<li class="nav-downloads"><a href="<%= url_for '/downloads.html' %>">downloads</a></li>
			<li class="nav-demo"><a href="<%= url_for '/demo.html' %>">demo</a></li>
			<li class="nav-documentation"><a href="<%= url_for '/documentation.html' %>">documentation</a></li>
			<li class="nav-community"><a href="<%= url_for '/community.html' %>">community</a></li>
			<li class="nav-blog"><a href="<%= url_for '/blog/index.html' %>">blog</a></li>
		  </ul>
		</div>
	
		<!-- Content -->
		<div class="content-wrapper">   
		  <% sidebar = rendered_partial_for(:sidebar) || yield_content(:sidebar) %>
		  <% if sidebar %>
		    <div class="row">
				<div class="col-lg-3">
					<div class="sidebar" id="sidebar">
					<%= sidebar %>
					</div>
				</div>
				<div class="col-lg-9">
					<%= yield %>
				</div>
			</div>
		  <% else %>
			<%= yield %>
		  <% end %>
		</div>
	</div>
	<div class="container">
		<!-- Footer -->
        <footer class="footer">
			<hr/>
			<div class="row">
				<div class="col-lg-4">
					<small class="copyright">
					Echo and NextApp are registered trademarks of NextApp, Inc. 
					</small>
				</div>
				<div class="col-lg-4">
					
				</div>
				<div class="col-lg-4 text-right">
					<a style="color: #555; text-decoration: none" href="#echo3twitter"><i class="icon-twitter icon-2x"></i></a>
					<a style="color: #555; text-decoration: none" href="http://github.com/echo3"><i class="icon-github icon-2x"></i></a>
					<a style="color: #555; text-decoration: none" href="#googleplus"><i class="icon-google-plus icon-2x"></i></a>
				</div>
			</div>
      </footer>
   </div>
   
   <!-- Scripts -->
   <script src="https://code.jquery.com/jquery-1.10.1.min.js"></script>
   <script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
</body>
</html>
